 *                             <xs:element name="ukEngineSpecification">
 *                                 <xs:complexType>
 *                                     <xs:sequence>
 *                                         <xs:element name="engineDetail" type="EngineDetail"/>
 *                                     </xs:sequence>
 *                                 </xs:complexType>
 *                             </xs:element>
 *                         </xs:all>
