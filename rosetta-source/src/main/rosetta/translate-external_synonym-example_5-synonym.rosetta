 *                     <xs:complexType>
 *                         <xs:sequence>
 *                             <xs:element name="engineDetail">
 *                                 <xs:complexType>
 *                                     <xs:sequence>
 *                                         <xs:element maxOccurs="unbounded" name="combustible">
 *                                             <xs:complexType>
 *                                                 <xs:simpleContent>
 *                                                     <xs:extension base="xs:string">
 *                                                         <xs:attribute name="scheme" type="xs:string"/>
 *                                                     </xs:extension>
 *                                                 </xs:simpleContent>
 *                                             </xs:complexType>
 *                                         </xs:element>
 *                                         <xs:element minOccurs="0" maxOccurs="unbounded" name="alternativeCombustible">
 *                                             <xs:complexType>
 *                                                 <xs:simpleContent>
 *                                                     <xs:extension base="xs:string">
 *                                                         <xs:attribute name="scheme" type="xs:string"/>
 *                                                     </xs:extension>
 *                                                 </xs:simpleContent>
 *                                             </xs:complexType>
 *                                         </xs:element>
 *                                     </xs:sequence>
 *                                 </xs:complexType>
 *                             </xs:element>
 *                         </xs:sequence>
 *                     </xs:complexType>
 *                 </xs:element>
